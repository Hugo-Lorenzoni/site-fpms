---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr-BE">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="title"
      content="Site de la Fédération des étudiants de la Faculté polytechnique de Mons (F.P.Ms)"
    />
    <meta
      name="description"
      content="la Fédération des étudiants FPMs (aussi appelée Fédé ou fede) a comme rôle de représenter les étudiants de la Polytech de Mons dans le contexte académique et folklorique"
    />
    <meta name="author" content="Commission Web FPMs 184" />
    <link
      rel="canonical"
      href="https://federation-des-etudiants-fpms.vercel.app/"
    />
    <!-- <link rel="canonical" href="https://fede.fpms.as.be" /> -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Fédé FPMs - {title}</title>
  </head>
  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    /* --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      var(--bg-light-color) 60%
    ); */

    --bg-hsl: 0, 0%, 96%;
    --bg-color: hsl(var(--bg-hsl), 1);

    --bg-light-hsl: 0, 0%, 100%;
    --bg-light-color: hsl(var(--bg-light-hsl), 1);

    --main-hsl: 238, 52%, 38%;
    --main-color: hsl(var(--main-hsl), 1);

    --second-hsl: 238, 68%, 48%;
    --second-color: hsl(var(--second-hsl), 1);

    --accent-gradient: linear-gradient(
      45deg,
      var(--main-color),
      var(--second-color) 30%,
      var(--bg-light-color) 60%
    );

    scroll-behavior: smooth;
  }
  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }
  html {
    font-family: "Poppins", -apple-system, BlinkMacSystemFont, Segoe UI, Roboto,
      Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue,
      sans-serif;
    background-color: var(--bg-color);
    color: var(--main-color);
  }
  body {
    margin: 0;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  strong {
    font-weight: bolder;
  }
  .wrapper {
    margin-inline: auto;
    width: min(80rem, calc(100% - 3rem));
  }
</style>
